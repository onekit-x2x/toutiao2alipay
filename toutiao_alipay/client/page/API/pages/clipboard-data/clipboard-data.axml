<import src="../../../common/head.axml"></import>
<import src="../../../common/foot.axml"></import>

<view  class="container">
  <template  is="head" data="{{title: 'get/set/ClipboardData'}}"></template>

  <view  class="page-body">
    <view  class="weui-cells weui-cells_after-title">
      <view  class="weui-cell weui-cell_input">
        <view  class="weui-cell__hd">
          <view  class="weui-label">Copy</view>
        </view>
        <view  class="weui-cell__bd">
          <input  class="weui-input" type="text" name="key" value="{{value}}" onInput="valueChanged"></input>
        </view>
      </view>
      <view  class="weui-cell weui-cell_input">
        <view  class="weui-cell__hd">
          <view  class="weui-label">Paste</view>
        </view>
        <view  class="weui-cell__bd">
          <input  class="weui-input" type="text" value="{{pasted}}"></input>
        </view>
      </view>
    </view>

    <view  class="btn-area">
      <wx-button  type="primary" onTap="copy">复制</wx-button>
      <wx-button  onTap="paste">粘贴</wx-button>
    </view>
  </view>

  <template  is="foot"></template>
</view>
