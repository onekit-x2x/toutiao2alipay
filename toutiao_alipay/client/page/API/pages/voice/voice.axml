<import src="../../../common/head.axml"></import>
<import src="../../../common/foot.axml"></import>
<view  class="wrap">
    <view  class="page-top">
        <view  class="page-top-text">start/stopRecord、play/stopVoice</view>
        <view  class="page-top-line"></view>
    </view>
    <view  class="page-record">
        <view  class="page-time">
            <view  a:if="{{!isEnd}}">
                <view  a:if="{{nearFinish}}" class="record-tip finish-tip">即将超时</view>
                <view  a:else class="record-tip">支持60秒以内音频录制</view>
            </view>
            <view  a:else style="height:035px;"></view>
            <view  class="record-time {{nearFinish?'finish-tip':''}}">{{startTime}}</view>
        </view>
        <view  class="page-status">
            <view  a:if="{{isEnd}}">
                <view  class="endtime">{{endTime}}</view>
                <view  class="page-finish">
                    <view  a:if="{{!isPlay}}" class="pause" onTap="playRecord"></view>
                    <view  a:else class="play" onTap="pauseRecord"></view>
                    <view  class="delete" onTap="deleteRecord"></view>
                </view>
            </view>
            <view  a:else>
                <view  a:if="{{isRecord}}" class="btn-record" onTap="stopRecord"></view>
                <view  a:else class="btn-start" onTap="startRecord"></view>
            </view>
        </view>
    </view>
    <template  is="foot"></template>
</view>